@model Book.Business.DTO.CreateBookDTO;
@using static Book.Business.DTO.StringHelpers;
@{
    ViewData["Title"] = "Book Details";
}
<style>
    .book-details-container {
        margin-top: 30px; /* Adds space below the navbar */
        margin-bottom: 50px; /* Adds space below book details */
    }

    .book-image {
        object-fit: cover;
        max-height: 400px;
    }

    .action-buttons {
        margin-top: 20px;
    }

    .input-group {
        max-width: 150px; /* Keep quantity input compact */
    }

    .book-details-container {
        padding: 11% 1%;
        margin: 106px 110px;
    }



</style>
<div class="container book-details-container">
    <div class="row">
        <!-- Left Side: Book Image -->
        <div class="col-lg-5 col-md-12 text-center ">
            <img src="@Url.Content(Model.FrontImage)" class="img-fluid rounded shadow book-image"
                 onerror="this.src='/images/placeholder.jpg';" />
        </div>

        <!-- Right Side: Book Details -->
        <div class="col-lg-7 col-md-12">
            <h2 class="fw-bold">@Model.Name</h2>

            <!-- Star Rating -->
            <div class="mb-2 text-warning">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-half"></i>
            </div>

            <!-- Price -->
            <h4 class="text-danger">
                <i class="fa-solid fa-indian-rupee-sign"></i> @Model.price
            </h4>

            <hr />

            <!-- Description -->
            <p class="text-muted">@StringHelpers.Truncate(Model.Description, 150)</p>

            <!-- Cart and Wishlist Actions -->
            <div class="container">
                <div class="row action-buttons align-items-center">
                    <!-- Quantity Input & Add to Cart Button -->
                    <div class="col-md-6">
                        <form id="add-to-cart-form" asp-action="AddCart" asp-controller="Cart" method="post">
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <div class="d-flex">
                                <div class="input-group quantity-box">
                                    <span class="input-group-text">Qty</span>
                                    <input type="number" name="Quantity" value="1" min="1" class="form-control text-center" />
                                </div>
                                <button type="submit" class="btn btn-primary ms-2 flex-grow-1">
                                    <i class="fa fa-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                            <div id="result-message" style="display: none;"></div>
                        </form>
                    </div>

                    <!-- Add to Wishlist Button -->
                    <div class="col-md-6">
                            <input type="hidden" name="bookitemId" value="@Model.Id" />
                        <button type="button" class="btn btn-outline-danger w-100 add-to-wishlist-btn"
                                data-bookitemid="@Model.Id">
                            <i class="fa fa-heart"></i> Add to Wishlist
                        </button>

                            <div id="wishlist-result-message" class="mt-2 text-success" style="display: none;"></div>
                    </div>
                </div>
            </div>


            <hr />

            <!-- Book Details Table -->
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td><strong>Author:</strong></td>
                        <td>@Model.AuthorName</td>
                    </tr>
                    <tr>
                        <td><strong>Category:</strong></td>
                        <td>@Model.CategoryName</td>
                    </tr>
                    <tr>
                        <td><strong>Shipping:</strong></td>
                        <td>01 day shipping. <span class="text-muted">(Free pickup today)</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Required Scripts -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Client/assets/js/item.js"></script>
