@model IEnumerable<Book.Business.DTO.CreateBookDTO>
@{

    ViewData["Title"] = "Home Page";

}
<style>
    .category-filter {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
        align-items: center;
        padding: 20px 0;
        font-size: 18px;
        font-weight: 500;
    }

        .category-filter a {
            text-decoration: none;
            color: #333;
            padding: 5px 10px;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
        }

          

    .card {
        border-radius: 10px;
        transition: transform 0.3s ease-in-out;
        height:400px;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-img-top {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .stars i {
        font-size: 14px;
    }

</style>

<div class="banner header-text">
    <div class="owl-banner owl-carousel">
        <div class="banner-item-01">
            <div class="text-content">
                <h4>Best Offer</h4>
                <h2>New Arrivals On Sale</h2>
            </div>
        </div>
        <div class="banner-item-02">
            <div class="text-content">
                <h4>Flash Deals</h4>
                <h2>Get your best products</h2>
            </div>
        </div>
        <div class="banner-item-03">
            <div class="text-content">
                <h4>Last Minute</h4>
                <h2>Grab last minute deals</h2>
            </div>
        </div>
    </div>
</div>
<div class="latest-products">
    <div class="category-filter d-flex flex-wrap gap-2 p-3 bg-light rounded shadow">
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary text-white">All Books</a>
        @foreach (var category in ViewBag.categorydata)
        {
            <a asp-action="Index" asp-controller="Home" asp-route-categoryId="@category.Value" class="btn btn-outline-primary">
                @category.Text
            </a>
        }
    </div>
</div>


    <div class="container mt-3">
        <div class="row">
            @foreach (var item in Model)
            {
               
            <div class="col-md-4">
                <div class="card text-center mb-5 card-container" style="width: 18rem; min-height: 25rem; overflow: hidden;">
                    <img src="~/@item.FrontImage" class="card-img-top rounded-3" height="180px" width="100%" style="height: 200px; object-fit: cover; border-radius:3px" alt="">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-text text-danger fw-bold">
                            <i class="fa-solid fa-indian-rupee-sign"></i> @item.price
                        </h6>&nbsp;

                        <!-- Read More / Read Less button -->
                        <a href="javascript:void(0);" class="btn btn-link btn-sm read-more d-none">Read More</a>

                        <div class="mt-2">
                            <a asp-action="Details" asp-controller="Home" class="btn btn-outline-primary btn-sm me-2" asp-route-id="@item.Id">
                                <i class="fa-solid fa-info-circle"></i> Details
                            </a>
                            <a asp-action="AddCart" asp-controller="Cart" class="btn btn-primary btn-sm" asp-route-id="@item.Id">
                                <i class="fa-solid fa-cart-shopping"></i> Add To Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>

<!-- About Section -->
<div class="best-features">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2> About Book Store</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="left-content">
                    <h4>Looking for the best books?</h4>
                    <p>
                        Our bookstore offers a vast collection of books in various genres, from fiction to educational materials. Find your next read today!
                    </p>
                    <ul class="featured-list">
                        <li><i class="fa-solid fa-book"></i> Wide range of books</li>                        
                        <li><i class="fa-solid fa-truck"></i> Fast delivery</li>
                        <li><i class="fa-solid fa-hand-holding-usd"></i> Affordable prices</li>
                        <li><i class="fa-solid fa-headset"></i> 24/7 Customer Support</li>
                    </ul>
                    <a href="#" class="btn btn-primary">Read More</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="right-image">
                    <img src="~/Client/assets/images/feature-image.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".card-container").forEach(function (card) {
            let contentWrapper = card.querySelector(".content-wrapper");
            let readMoreBtn = card.querySelector(".read-more");

            // Check if content overflows
            if (contentWrapper.scrollHeight > contentWrapper.clientHeight) {
                readMoreBtn.classList.remove("d-none"); // Show Read More button
            }

            readMoreBtn.addEventListener("click", function () {
                if (contentWrapper.style.maxHeight) {
                    contentWrapper.style.maxHeight = "4.5rem";
                    this.textContent = "Read More";
                } else {
                    contentWrapper.style.maxHeight = "none";
                    this.textContent = "Read Less";
                }
            });
        });
    });
</script>



