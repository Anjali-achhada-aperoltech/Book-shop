
@model Book.Business.DTO.LoginDto

@{
    ViewData["Title"] = "Login";
    Layout="_Blank";
}
<div class="card row col-4 mx-auto">
<div class="card-header">
    <h1>Sign In</h1>
</div>
<div class="card-body">
    <form role="form" class="needs-validation" asp-controller="Account" asp-action="Login" novalidate>
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show Register " id="successMessage" role="alert">
                <strong>@TempData["success"]</strong>
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show Register " id="successMessage" role="alert">
                <strong>@TempData["error"]</strong>
            </div>
        }
        <div class="form-group">
            <label for="validationCustomUsername" class="form-label">Email</label>
            <div class="input-group has-validation">
                <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-envelope-at-fill"></i></span>
                <input asp-for="Email" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required placeholder="UserName">
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="valid-feedback">
                    Submit Sucessfully!
                </div>
                <div class="invalid-feedback">
                    Please Enter Valid UserName!!
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="validationCustom02" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" id="validationCustom02" required placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="valid-feedback">
                Submit Sucessfully!
            </div>
            <div class="invalid-feedback">
                Please Enter Valid password!!
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit"><i class="bi bi-person-circle"></i> SIGN IN</button>
        </div>
        <div class="form-group">
            <a asp-action="Register" asp-controller="Account">Don't have an account? Register</a>
        </div>
    </form>
</div>
</div>
@section Scripts {

    <script src="~/js/Register-Login.js"></script>
}
