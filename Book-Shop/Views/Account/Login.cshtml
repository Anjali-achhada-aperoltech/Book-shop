@model Book.Business.DTO.LoginDto

@{
    ViewData["Title"] = "Login";
    Layout = "_Blank";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg rounded" style="width: 380px; border-radius: 15px;">
        <div class="text-center">
            <img src="~/Admin/img/login.png" alt="User Avatar" class="rounded-circle border shadow-sm mb-3"
                 style="width: 100px; height: 100px; object-fit: cover;">
        </div>
        <div class="card-header bg-primary text-white text-center rounded">
            <h2><i class="fa-regular fa-circle-user"></i> Sign In</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Account" asp-action="Login" class="needs-validation" novalidate>
                @if (TempData["success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" id="successMessage" role="alert">
                        <strong>@TempData["success"]</strong>
                    </div>
                }
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" id="errorMessage" role="alert">
                        <strong>@TempData["error"]</strong>
                    </div>
                }

                <div class="form-group">
                    <label for="email"><i class="fas fa-envelope"></i> Email</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input asp-for="Email" class="form-control" id="email" required placeholder="Enter Email">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="password"><i class="fas fa-lock"></i> Password</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="Password" type="password" class="form-control" id="password" required placeholder="Enter Password">
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-3 rounded-pill">
                    <i class="fas fa-sign-in-alt"></i> Sign In
                </button>

                <div class="text-center mt-3">
                    <a asp-action="Register" asp-controller="Account" class="text-primary">
                        <i class="fas fa-user-plus"></i> Don't have an account? Register
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Register-Login.js"></script>
}
