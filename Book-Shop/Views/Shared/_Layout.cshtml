@using Book.Domain.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<Applicationuser> signInManager
@inject UserManager<Applicationuser> userManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book_Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Book_Shop.styles.css" asp-append-version="true" />
    <link href="~/Client/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Client/assets/fonts/FontAwesome.otf">
    <link rel="stylesheet" href="~/Client/assets/css/templatemo-sixteen.css">
    <link rel="stylesheet" href="~/Client/assets/css/owl.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .navbar{
            padding:7px 0px;
        }


    </style>
</head>
<body>

    <header>
        <!-- Top Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-light p-1">
            <div class="container-fluid justify-content-end">
                <ul class="navbar-nav">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <span class="nav-link text-dark">Hello, @userManager.GetUserName(User)</span>
                        </li>
                        <li class="nav-item">
                            <form method="post" action="/Account/Logout">
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-primary me-1" href="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary" href="/Account/Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand fw-bold text-dark" href="/">
                    <span class="text-primary">Book Store</span>
                </a>

                <!-- Toggler Button (For Mobile) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="GetAll" asp-controller="Product">Book Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Contact">Contact</a>
                        </li>
                        
                    </ul>

                    <!-- Search Form -->
                    <form class="d-flex me-3">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-dark" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <!-- Cart & Wishlist -->
                    <ul class="navbar-nav">
                        <li class="nav-item me-3">
                            <a class="nav-link position-relative" href="/Cart/Index">
                                <i class="bi bi-cart fs-5"></i>
                                <span id="cartlist-count"
                                      class="badge bg-primary position-absolute top-0 start-100 translate-middle">0</span>
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link position-relative" href="/WishList/Index">
                                <i class="fa fa-heart fs-5 text-danger"></i>
                                <span id="wishlist-count"
                                      class="badge bg-danger position-absolute top-0 start-100 translate-middle">0</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="inner-content">
                        <p>
                            Developed By:Achhada Anjali &&Aacute; Dhara Naliyapara

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Client/vendor/jquery/jquery.min.js"></script>
    <script src="~/Client/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
            loadCartCount();
        async function loadCartCount() {
            try {
                var response = await fetch(`/Cart/GetData`);
                console.log(response)
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>

    <!-- Additional Scripts -->
    <script src="~/Client/assets/js/custom.js"></script>
    <script src="~/Client/assets/js/owl.js"></script>
    <script src="~/Client/assets/js/slick.js"></script>
    <script src="~/Client/assets/js/isotope.js"></script>
    <script src="~/Client/assets/js/accordions.js"></script>
    <script src="~/Client/assets/js/ItemCount.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
