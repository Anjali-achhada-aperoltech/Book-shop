@model Book.Business.DTO.CreateBookDTO

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Book Details</h2>
    <hr />

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Book Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 font-weight-bold">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 font-weight-bold">Author Name:</dt>
                <dd class="col-sm-9">@Model.AuthorName</dd>

                <dt class="col-sm-3 font-weight-bold">Price:</dt>
                <dd class="col-sm-9"><i class="fa-solid fa-indian-rupee-sign"></i> @Model.price</dd>

                <dt class="col-sm-3 font-weight-bold">Category:</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>

                <dt class="col-sm-3 font-weight-bold">BookLanguage:</dt>
                <dd class="col-sm-9">@Model.BookLanguageName</dd>

                <dt class="col-sm-3 font-weight-bold">Book Cover:</dt>
                <dd class="col-sm-9">
                    <img src="@Url.Content(Model.FrontImage)" class="rounded img-fluid" width="150px" height="200px" />
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
