@model Book.Business.DTO.ApplicationUserDTO

@{
    ViewData["Title"] = "Users Details";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Users Details</h2>
    <hr />

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2 font-weight-bold">FirstName:</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-2 font-weight-bold">LastName:</dt>
                <dd class="col-sm-9">@Model.LastName</dd>
                <dt class="col-sm-2 font-weight-bold">DOB:</dt>
                <dd class="col-sm-9">@Model.DateOfBirth</dd>
                <dt class="col-sm-2 font-weight-bold">Role:</dt>
                <dd class="col-sm-9">@Model.Role</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Update" asp-route-id="@Model.id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

