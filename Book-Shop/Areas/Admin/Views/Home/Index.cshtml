﻿@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h3 class="mb-4">Dashboard</h3>
    <div class="row justify-content-center">

        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-lg text-center border-left-primary">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-list text-primary mb-3"></i>
                        <span class="card-title">Categories</span>
                        <span class="card-text font-weight-bold">@await Component.InvokeAsync("CountCity")</span>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-lg text-center border-left-warning">
                <div class="card-body">
                    <i class="fas fa-book text-warning mb-3"></i>
                    <span class="card-title">Book Items</span>
                    <span class="card-text font-weight-bold">@await Component.InvokeAsync("CountProduct")</span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-lg text-center border-left-info">
                <div class="card-body">
                    <i class="fas fa-users text-info mb-3"></i>
                    <span class="card-title">Total Users</span>
                    <span class="card-text font-weight-bold">@await Component.InvokeAsync("CountUser")</span>
                </div>
            </div>
        </div>

    </div>
</div>