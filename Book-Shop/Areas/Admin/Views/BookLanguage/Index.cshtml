@model IEnumerable<Book.Business.DTO.BookLangageDTO>

@{
    ViewData["Title"] = "Index";
}
<style>
    .action-icons a {
        transition: transform 0.2s ease-in-out;
    }

        .action-icons a:hover {
            transform: scale(1.2);
        }

    .action-icons a {
        margin: 0 5px; /* Adjusts spacing between icons */
    }

</style>
<p>
    <a asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i>  Create New</a>
</p>
@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="Message">
        <strong>Success!</strong> @TempData["success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


@if (TempData["update"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert" id="Message">
        <strong>Sucess!</strong> @TempData["update"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["delete"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="Message">
        <strong>Sucess!</strong> @TempData["delete"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="categoryTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded-circle">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>

                            <button type="button" class="btn btn-sm btn-danger rounded-circle" data-bs-toggle="modal" data-bs-target="#deleteBookLanguageModal_@item.Id" title="Delete User">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="modal fade" id="deleteBookLanguageModal_@item.Id" tabindex="-1" aria-labelledby="deleteBookLanguageLabel_@item.Id" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteBookLanguageLabel_@item.Id">
                        <i class="fa-solid fa-exclamation-triangle"></i> Confirm Delete
                    </h5>
                    <button type="button" class="close btn-lg text-white" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5 class="mb-3 text-center text-dark">Are you sure you want to delete this language?</h5>
                    <div class="card p-3 shadow-sm">
                        <dl class="row mb-0">
                            <dt class="col-md-4 text-end fw-semibold">Language:</dt>
                            <dd class="col-md-8">@item.Name</dd>
                        </dl>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


@section scripts{
    <script src="~/Admin/js/site.js"> </script>
    <script>
            $(document).ready(function () {
            $('#categoryTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [5, 10, 25, 50],
                "pageLength": 10
            });
        });
</script>
    
}
                



    