@model IEnumerable<Book.Business.DTO.CategoryDto>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i>  Create New</a>
</p>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table"  width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>

                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square">  </i></a>
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info">  </i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


                



    