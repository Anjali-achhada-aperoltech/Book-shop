@model Book.Business.DTO.OrderDetailsDTO

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4>Order Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Customer Name:</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.email</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.phoneno</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.Address, @Model.city, @Model.state</dd>

                        <dt class="col-sm-4">Order Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.OrderStatus == "Completed" ? "bg-success" : "bg-warning")">
                                @Model.OrderStatus
                            </span>
                        </dd>

                        <dt class="col-sm-4">Order Date:</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToString("dd-MMM-yyyy")</dd>

                        <dt class="col-sm-4">Order Total:</dt>
                        <dd class="col-sm-8"><strong>@Model.OrderTotal</strong></dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
